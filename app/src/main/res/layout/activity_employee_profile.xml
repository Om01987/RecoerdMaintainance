<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Photo Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp">

                    <!-- Circular Profile Photo -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfilePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person_placeholder"
                        android:scaleType="centerCrop"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/design_default_color_primary" />

                    <!-- Small Edit Overlay Icon -->
                    <ImageView
                        android:id="@+id/ivEditOverlay"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_edit_small"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_card"
                        android:padding="4dp"
                        android:elevation="2dp"/>

                </FrameLayout>
            </LinearLayout>

            <!-- Personal Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👤 Personal Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                    <TextView
                        android:id="@+id/tvEmployeeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee Name"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee ID"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                    <TextView
                        android:id="@+id/tvEmployeeId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAN251001"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="employee@example.com"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Job Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvJobInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💼 Job Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Designation"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                            <TextView
                                android:id="@+id/tvDesignation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Software Developer"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Department"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                            <TextView
                                android:id="@+id/tvDepartment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IT"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salary"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                            <TextView
                                android:id="@+id/tvSalary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹50,000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_green_dark" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Joined Date"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                            <TextView
                                android:id="@+id/tvJoinedDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2023-01-15"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Address Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvAddressInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 Address Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address Line 1"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                    <TextView
                        android:id="@+id/tvAddressLine1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Main Street"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address Line 2"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                    <TextView
                        android:id="@+id/tvAddressLine2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Near Park"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="City"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                            <TextView
                                android:id="@+id/tvCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mumbai"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="State"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                            <TextView
                                android:id="@+id/tvState"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Maharashtra"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Country"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                            <TextView
                                android:id="@+id/tvCountry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="India"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Employee ID Card Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvIdCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🆔 Employee ID Card"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginBottom="16dp" />

                    <!-- ID Card Preview -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvIdCardPreview"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        android:background="@drawable/id_card_gradient">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/id_card_gradient"
                            android:padding="16dp">

                            <!-- Company Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="MatraSoftech"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ID CARD"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:background="#40FFFFFF"
                                    android:padding="4dp"
                                    android:layout_marginStart="8dp" />
                            </LinearLayout>

                            <!-- Employee Info Section -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <!-- Photo Section -->
                                <FrameLayout
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="12dp">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/ivIdCardPhoto"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_person_placeholder"
                                        app:civ_border_width="2dp"
                                        app:civ_border_color="#FFFFFF" />
                                </FrameLayout>

                                <!-- Details Section -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/tvIdCardName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Employee Name"
                                        android:textColor="#FFFFFF"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:maxLines="1"
                                        android:ellipsize="end" />

                                    <TextView
                                        android:id="@+id/tvIdCardId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MAN251001"
                                        android:textColor="#E0FFFFFF"
                                        android:textSize="12sp"
                                        android:layout_marginTop="2dp" />

                                    <TextView
                                        android:id="@+id/tvIdCardDesignation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Software Developer"
                                        android:textColor="#E0FFFFFF"
                                        android:textSize="11sp"
                                        android:layout_marginTop="2dp"
                                        android:maxLines="1"
                                        android:ellipsize="end" />

                                    <TextView
                                        android:id="@+id/tvIdCardDepartment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="IT Department"
                                        android:textColor="#E0FFFFFF"
                                        android:textSize="11sp"
                                        android:layout_marginTop="1dp"
                                        android:maxLines="1"
                                        android:ellipsize="end" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Footer -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Valid until further notice"
                                    android:textColor="#B0FFFFFF"
                                    android:textSize="9sp" />

                                <TextView
                                    android:id="@+id/tvIdCardJoinDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Since 2023"
                                    android:textColor="#B0FFFFFF"
                                    android:textSize="9sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDownloadIdCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Download"
                            app:icon="@android:drawable/stat_sys_download"
                            app:cornerRadius="8dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPrintIdCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Print"
                            app:icon="@android:drawable/ic_menu_share"
                            app:cornerRadius="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Security Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvSecurityInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔐 Security Settings"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password Status"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                    <TextView
                        android:id="@+id/tvPasswordStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Using initial password"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        app:icon="@android:drawable/ic_lock_lock"
                        app:cornerRadius="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>